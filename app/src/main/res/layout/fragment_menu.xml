<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center">

        <Button
            android:id="@+id/btnElectricScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Электроснабжение"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/btnWaterScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Водоснабжение"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/btnGasScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Газоснабжение"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/btnReportScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отчеты"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/btnSettingScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки тарифов"
            app:cornerRadius="5dp" />


    </LinearLayout>

</FrameLayout>